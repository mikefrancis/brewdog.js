{
  "name": "brewdog-js",
  "version": "2.1.0",
  "description": "A JS wrapper for punkapi.com",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --runInBand",
    "dev": "jest --watch",
    "lint": "tslint 'src/**/*.ts'",
    "compile": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikefrancis/brewdog.js.git"
  },
  "keywords": [
    "brewdog",
    "beer"
  ],
  "author": "Mike Francis <mikeffrancis@gmail.com>",
  "license": "WTFPL",
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.4",
    "ts-lint": "^4.5.1",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "qs": "^6.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/__mocks__/**",
      "!**/__tests__/**"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
