{
  "name": "brewdog-js",
  "version": "2.0.0",
  "description": "A JS wrapper for punkapi.com",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest",
    "dev": "jest --watch",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "compile": "tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikefrancis/brewdog.js.git"
  },
  "keywords": [
    "brewdog",
    "beer"
  ],
  "author": "Mike Francis <mikeffrancis@gmail.com>",
  "license": "WTFPL",
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "jest": "^22.1.4",
    "jest-fetch-mock": "^1.4.0",
    "ts-jest": "^22.0.1",
    "tslint": "^4.5.1",
    "typescript": "^2.2.1"
  },
  "dependencies": {
    "qs": "^6.3.0"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "collectCoverage": true,
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!**/node_modules/**",
      "!**/__mocks__/**",
      "!**/__tests__/**"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "setupFiles": [
      "./src/__tests__/setup.js"
    ],
    "testPathIgnorePatterns": [
        "setup.js"
    ]
  }
}
