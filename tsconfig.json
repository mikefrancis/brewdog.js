{
    "compilerOptions": {
        "declaration": true,
        "lib": [
            "es2015"
        ],
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "strict": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "**/__mocks__",
        "**/__tests__"
    ]
}
